<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".SecondTab">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                android:id="@+id/appbackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/frankensteinbig" />

            <Button
                android:id="@+id/letter1_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/letter1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                app:icon="@drawable/book_icon"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/letter2_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/letter2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                app:icon="@drawable/book_icon"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/letter3_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/letter3"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                app:icon="@drawable/book_icon"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/letter4_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                  android:text="@string/letter4"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                app:icon="@drawable/book_icon"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</FrameLayout>